{
	"compilerOptions": {
  	"module": "commonjs",
		"target": "es6",
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
		"noImplicitAny": false,
		"sourceMap": false,
		"outDir": "dist"
	},
	"include": [
      "src/**/*.ts",
      "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
